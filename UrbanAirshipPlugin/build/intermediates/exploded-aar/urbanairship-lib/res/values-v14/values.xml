    <eat-comment/>
    <color name="ua_iam_primary">#ffffff</color>
    <color name="ua_iam_secondary">#ff444444</color>
    <declare-styleable name="BannerView">
        <!-- The banner's font path -->
        <attr format="string" name="bannerFontPath"/>

        <!-- The banner's text appearance -->
        <attr format="reference" name="bannerTextAppearance"/>

        <!-- Primary color, used as the background color -->
        <attr format="color" name="bannerPrimaryColor"/>

        <!-- Secondary color, used for any text and icons -->
        <attr format="color" name="bannerSecondaryColor"/>

        <!-- The icon for the dismiss button -->
        <attr format="reference" name="bannerDismissButtonDrawable"/>

        <!-- If the dismiss button should be removed from the banner or not -->
        <attr format="boolean" name="bannerNoDismissButton"/>

        <!-- The banner action button text appearance -->
        <attr format="reference" name="bannerActionButtonTextAppearance"/>
    </declare-styleable>
    <declare-styleable name="CardView">
        <!-- Background color for CardView. -->
        <attr format="color" name="optCardBackgroundColor"/>
        <!-- Corner radius for CardView. -->
        <attr format="dimension" name="optCardCornerRadius"/>
        <!-- Elevation for CardView. -->
        <attr format="dimension" name="optCardElevation"/>
    </declare-styleable>
    <declare-styleable name="Theme">
        <!-- Attribute to allow style override for in-app message banners -->
        <attr format="reference" name="inAppMessageBannerStyle"/>
    </declare-styleable>
    <dimen name="ua_iam_banner_corner_radius">4dp</dimen>
    <dimen name="ua_iam_banner_elevation">4dp</dimen>
    <dimen name="ua_iam_banner_width">320dp</dimen>
    <integer name="ua_iam_animation_duration">300</integer>
    <style name="Base.Widget.UrbanAirship.InAppMessage.Banner" parent="">
        <item name="android:layout_width">@dimen/ua_iam_banner_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
    <style name="Base.Widget.UrbanAirship.InAppMessage.Banner.ActionButton" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Base.Widget.UrbanAirship.InAppMessage.Banner.ActionButtonContainer" parent="">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>
    <style name="Base.Widget.UrbanAirship.InAppMessage.Banner.DismissButton" parent="">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">-12dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/ic_close_white_18dp</item>
    </style>
    <style name="Base.Widget.UrbanAirship.InAppMessage.Banner.Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="Base.Widget.UrbanAirship.InAppMessage.Banner.Text" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
    </style>
    <style name="InAppMessage.Banner" parent="">
        <item name="bannerTextAppearance">@style/InAppMessage.Banner.TextAppearance</item>
        <item name="bannerActionButtonTextAppearance">@style/InAppMessage.Banner.TextAppearance</item>
        <item name="bannerPrimaryColor">@color/ua_iam_primary</item>
        <item name="bannerSecondaryColor">@color/ua_iam_secondary</item>
        <item name="optCardElevation">@dimen/ua_iam_banner_elevation</item>
        <item name="optCardCornerRadius">@dimen/ua_iam_banner_corner_radius</item>
    </style>
    <style name="InAppMessage.Banner.TextAppearance" parent="@android:style/TextAppearance.Small"/>
    <style name="Widget.UrbanAirship.InAppMessage.Banner" parent="Base.Widget.UrbanAirship.InAppMessage.Banner">
        <item name="android:background">@drawable/ua_iam_background</item>
    </style>
    <style name="Widget.UrbanAirship.InAppMessage.Banner.ActionButton" parent="Base.Widget.UrbanAirship.InAppMessage.Banner.ActionButton"/>
    <style name="Widget.UrbanAirship.InAppMessage.Banner.ActionButtonContainer" parent="Base.Widget.UrbanAirship.InAppMessage.Banner.ActionButtonContainer"/>
    <style name="Widget.UrbanAirship.InAppMessage.Banner.Card" parent="Base.Widget.UrbanAirship.InAppMessage.Banner"/>
    <style name="Widget.UrbanAirship.InAppMessage.Banner.DismissButton" parent="Base.Widget.UrbanAirship.InAppMessage.Banner.DismissButton"/>
    <style name="Widget.UrbanAirship.InAppMessage.Banner.Divider" parent="Base.Widget.UrbanAirship.InAppMessage.Banner.Divider"/>
    <style name="Widget.UrbanAirship.InAppMessage.Banner.Text" parent="Base.Widget.UrbanAirship.InAppMessage.Banner.Text"/>
</resources>